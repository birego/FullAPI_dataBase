generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ordinateur {
  tag   String    @id @default(uuid()) @map("Tag")
  fabriquant String
  modele String @map("Modele")
  Apprenant Apprenant[]
}
model Apprenant {
  id String @id
  prenom String
  nom String
  postnom String?
  dateNaissance DateTime? @map("Date de Naissance")
  adress String
  email String?
  telephone String
  ordinateurId String
  ordinateur Ordinateur @relation(fields: [ordinateurId], references: [tag])
  cohortes Cohorte[] 
}
model Cohorte {
  id String @id
  description String
  session Session[]
  idApprenat String
  cache Coach[]
  apprenant Apprenant @relation(fields: [idApprenat], references: [id])
}

model Session {
  id Int @id
  annee String
  type String
  ville String
  idCohorte String
  cohorte Cohorte @relation(fields: [idCohorte], references: [id])
}

model Coach {
  id String @id
  Nom String
  telephone String
  dateNaissance DateTime
  email String
  adresse String
  idCohorte String
  Cohorte Cohorte @relation(fields: [idCohorte], references: [id])
}
